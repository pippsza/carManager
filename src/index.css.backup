@import "tailwindcss";

@theme {
  --main: #101828;
  --gray: #8d929a;
  --button: #3470ff;
  --button-hover: #0b44cd;
  --gray-light: #dadde1;
  --badges: #f2f4f7;
  --inputs: #f7f7f7;
  --white: #ffffff;

  --color-success: oklch(0.72 0.22 149);
  --color-warning: oklch(0.77 0.19 70);
  --color-error: oklch(0.64 0.24 25);
  --color-info: #3470ff;

  --font-family: "Manrope", sans-serif;
  --second-family: "Inter", sans-serif;
  --font-display: "Poppins", system-ui, sans-serif;
  --font-body: "Inter", system-ui, sans-serif;
  --font-mono: "JetBrains Mono", "Fira Code", monospace;

  --text-xs: 0.75rem;
  --text-xs--line-height: calc(1.2 / 0.75);
  --text-sm: 0.875rem;
  --text-sm--line-height: calc(1.3 / 0.875);
  --text-base: 1rem;
  --text-base--line-height: calc(1.5 / 1);
  --text-lg: 1.125rem;
  --text-lg--line-height: calc(1.6 / 1.125);
  --text-xl: 1.25rem;
  --text-xl--line-height: calc(1.7 / 1.25);
  --text-2xl: 1.5rem;
  --text-2xl--line-height: calc(1.8 / 1.5);
  --text-3xl: 1.875rem;
  --text-3xl--line-height: calc(2 / 1.875);
  --text-4xl: 2.25rem;
  --text-4xl--line-height: calc(2.2 / 2.25);
  --text-5xl: 3rem;
  --text-5xl--line-height: 1.1;

  --radius-DEFAULT: 0.75rem;
  /* --radius-DEFAULT: 10rem; */
  --radius-card: 0.75rem;
  --radius-button: 0.5rem;
  --radius-input: 0.375rem;

  --shadow-card: 0 4px 6px -1px rgb(0 0 0 / 0.1),
    0 2px 4px -1px rgb(0 0 0 / 0.06);
  --shadow-card-hover: 0 10px 15px -3px rgb(0 0 0 / 0.1),
    0 4px 6px -2px rgb(0 0 0 / 0.05);
  --shadow-modal: 0 25px 50px -12px rgb(0 0 0 / 0.25);
  --shadow-dropdown: 0 10px 15px -3px rgb(0 0 0 / 0.1),
    0 4px 6px -2px rgb(0 0 0 / 0.05);

  --animate-fade-in: fadeIn 0.3s ease-out;
  --animate-slide-up: slideUp 0.3s ease-out;
  --animate-slide-down: slideDown 0.3s ease-out;
  --animate-scale-in: scaleIn 0.2s ease-out;
  --animate-bounce-soft: bounceSoft 0.6s ease-out;

  --breakpoint-xs: 20rem;
  --breakpoint-sm: 30rem;
  --breakpoint-md: 48rem;
  --breakpoint-lg: 64rem;
  --breakpoint-xl: 80rem;
  --breakpoint-2xl: 96rem;

  --spacing-18: 4.5rem;
  --spacing-88: 22rem;
  --spacing-128: 32rem;

  --container-DEFAULT: 1440px; /* 1440px */
  --container-padding: 120px; /* 120px */

  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    0% {
      transform: translateY(10px);
      opacity: 0;
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes slideDown {
    0% {
      transform: translateY(-10px);
      opacity: 0;
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes scaleIn {
    0% {
      transform: scale(0.95);
      opacity: 0;
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }

  @keyframes bounceSoft {
    0%,
    20%,
    53%,
    80%,
    100% {
      transform: translate3d(0, 0, 0);
    }
    40%,
    43% {
      transform: translate3d(0, -5px, 0);
    }
    70% {
      transform: translate3d(0, -2px, 0);
    }
    90% {
      transform: translate3d(0, -1px, 0);
    }
  }
}

* {
  font-family: "Manrope", sans-serif;
}

@layer components {
  .card {
    background-color: var(--white);
    border-radius: var(--radius-card);
    box-shadow: var(--shadow-card);
    padding: 1.5rem;
    transition: box-shadow 200ms;
  }

  .card:hover {
    box-shadow: var(--shadow-card-hover);
  }

  .btn-primary {
    background-color: var(--button);
    color: var(--white);
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: var(--radius-button);
    transition: background-color 200ms;
    border: none;
    cursor: pointer;
  }

  .btn-primary:hover {
    background-color: var(--button-hover);
  }

  .btn-secondary {
    background-color: var(--gray);
    color: var(--white);
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: var(--radius-button);
    transition: background-color 200ms;
    border: none;
    cursor: pointer;
  }

  .btn-secondary:hover {
    background-color: var(--main);
  }

  .input-field {
    border: 1px solid var(--gray-light);
    border-radius: var(--radius-input);
    padding: 0.5rem 0.75rem;
    outline: none;
    transition: border-color 200ms, box-shadow 200ms;
  }

  .input-field:focus {
    border-color: transparent;
    box-shadow: 0 0 0 2px var(--button);
  }
}
